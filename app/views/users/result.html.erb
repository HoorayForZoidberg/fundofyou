<div class="criteria-breadcrumb-container text-center">
  <div class="criteria-breadcrumb">
    <div class="criteria-breadcrumb-item"><span>1</span>Mes causes</div>
    <div class="criteria-breadcrumb-item criteria-breadcrumb-item-active"><span>2</span>Mes projets</div>
    <div class="criteria-breadcrumb-item"><span>3</span>Contribuer</div>
  </div>
</div>

<div class="main-container">
  <div class="main-header">
    <div class="causes-resume">
      <h6><i class="fa fa-heart" aria-hidden="true"></i> Les causes que je soutiens</h6>
      <p><em>Sélectionnez les causes qui vous tiennent à coeur pour trouver les projets qui vous ressemblent.</em></p>
    </div>
    <div class="causes-buttons">
      <%= link_to "Réinitialiser", edit_criteria_path, class: "btn button-reset", id: "criteria-reset" %>
      <form action="/users/<%= @user.id %>/donations" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input name="recommendations" type="hidden" value="<%= @recommendations %>">
        <input type="submit" class="btn button-submit" id="criteria-submit" value="Donner">
      </form>
    </div>
  </div>
  <div class="content-container choose-criteria">
      <div class="choose-criteria-item">
        <h3>Mes Recommandations</h3>
      </div>
      <div>
        <%= form_tag user_donations_path(current_user) do %>
          <% @recommendations.each do |recommendation|%>
            <%= hidden_field_tag recommendation[:project_id], recommendation[:project_id] %>
            <div id="<%= recommendation[:project_id] %>" class="user-selected">
                <div class="col-xs-12 col-sm-4" >
                  <div class="card home-project">
                    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                     url('https://kitt.lewagon.com/placeholder/cities/shanghai');"></div>
                     <div class="card-category">Humanitaire</div>
                     <div class="card-description">
                       <h2><%= recommendation[:project_id] %></h2>
                        <p>start</p>
                        <p>end</p>
                     </div>
                      <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
                  </div>
                </div>
              </div>
          <% end %>
          <input name="Donner" type="submit" value="Donner" />
        <% end %>
      </div>


