<div class="criteria-breadcrumb-container text-center">
  <div class="criteria-breadcrumb">
    <div class="criteria-breadcrumb-item"><span>1</span>Mes causes</div>
    <div class="criteria-breadcrumb-item"><span>2</span>Mes projets</div>
    <div class="criteria-breadcrumb-item criteria-breadcrumb-item-active"><span>3</span>Contribuer</div>
  </div>
</div>

<div class="main-container">
  <div class="main-header">
    <div class="causes-resume">
      <h6><i class="fa fa-heart" aria-hidden="true"></i> Les causes que je soutiens</h6>
      <p><em>Sélectionnez les causes qui vous tiennent à coeur pour trouver les projets qui vous ressemblent.</em></p>
    </div>
    <div class="causes-buttons">
      <%= link_to "Retourner aux projets", result_path, class: "btn button-reset" %>
      <%= link_to "Changer mes causes", edit_criteria_path, class: "btn button-reset" %>
    </div>
  </div>
  <div class="content-container choose-criteria">
    <div class="choose-criteria-item" >
      <h3>Confirmez votre donation</h3>
    </div>
    <ul>
      <% @order.donations.each do |donation| %>
        <li><%= donation.project.name %> (<%= humanized_money_with_symbol(donation.amount) %>)</li>
      <% end %>
    </ul>
    <%= form_tag order_payments_path(@order) do %>
      <article>
        <label class="amount">
          <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
        </label>
      </article>
  </div>
</div>



  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Fund of You"
    data-email="<%= current_user.email %>"
    data-description="Nombre de donations: <%= @order.donations.size %>"
    data-amount="<%= @order.amount_cents %>"
    data-currency="<%= @order.amount.currency %>"></script>
<% end %>
