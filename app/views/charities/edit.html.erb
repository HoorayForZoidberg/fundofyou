<div class="container">
  <div class="row">
    <%= link_to "Retour Ã  la show de l'asso", charity_path(@charity) %>
    <%= link_to "Toutes les assos", charities_path %>
    <div class="text-center"><h2>Editer <%= @charity.name %></h2></div>
    <div class="col-xs-12 col-sm-offset-4 col-sm-4">

      <%= simple_form_for(@charity) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :immatriculation %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :email %>
          <%= f.input :contact_name %>
          <%= f.input :description %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
           <%= f.submit class: "btn btn-primary btn-block"%>
        </div>
      <% end %>

    </div>
  </div>
</div>
