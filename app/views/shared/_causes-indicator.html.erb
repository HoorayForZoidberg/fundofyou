<div class="cadre-causes template-text-dashboard">
  <div class="row full-width flex-between">
    <div class="user-show-slider-label">
      <% if true#@user.environment > 0 %>
        <div class="ecologie-case bullet-dashboard cause-label col-xs-6 col-sm-6"><i class="fa fa-leaf"></i><p>|</p><p>Ecologie</p></div>
      <% else %>
